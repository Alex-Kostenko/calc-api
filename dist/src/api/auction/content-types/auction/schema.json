{
    "kind": "collectionType",
    "collectionName": "auctions",
    "info": {
        "singularName": "auction",
        "pluralName": "auctions",
        "displayName": "Auction",
        "description": ""
    },
    "options": {
        "draftAndPublish": true
    },
    "attributes": {
        "name": {
            "type": "string",
            "required": true
        },
        "locations": {
            "type": "relation",
            "relation": "manyToMany",
            "target": "api::location.location",
            "mappedBy": "auctions"
        },
        "auction_tax": {
            "type": "relation",
            "relation": "oneToOne",
            "target": "api::auction-tax.auction-tax",
            "inversedBy": "auction"
        },
        "image": {
            "type": "media",
            "multiple": false,
            "required": true,
            "allowedTypes": [
                "images"
            ]
        },
        "bids": {
            "type": "component",
            "repeatable": true,
            "component": "bid.bid",
            "required": true
        },
        "additionalFee": {
            "type": "decimal",
            "required": true
        }
    }
}
